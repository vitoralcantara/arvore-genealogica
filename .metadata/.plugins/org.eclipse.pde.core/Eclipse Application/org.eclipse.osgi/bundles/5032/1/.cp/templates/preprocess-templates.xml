		enabled="true" autoinsert="false">//#ifdef ${symbol1}
	${cursor}
//#elifdef ${symbol2}
		
//#endif
	</template>

	<template name="mdebug" description="debug multi lines statement"
		id="org.eclipse.mtj.ui.templates.mdebug" context="org.eclipse.mtj.preprocess"
		enabled="true" autoinsert="false">//#mdebug ${debug}
	${cursor}
//#enddebug
