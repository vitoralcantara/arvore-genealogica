		int lo= lo0;
		int hi = hi0 ;
		int mid ;
		// pause for redraw
		if( hi0 > lo0 ) {
		 mid = a[(lo0 + hi0 ) / 2] ;
		 
		 while (lo <= hi) {
		while ((lo < hi0 ) && ( a[lo] < mid))
		 ++ l o ;
		w h i l e ( ( h i > l o 0 ) && ( a [ h i ] > m i d ) )
		−− h i ;
		i f ( l o <= h i ) {
		 s w a p ( a , l o , h i ) ;
		 ++ l o ;
		−− h i ;
		}
		}
		i f ( l o 0 < h i )
		 q u i c k s o r t ( a , l o 0 , h i ) ;
		i f ( l o < h i 0 )
		 q u i c k s o r t ( a , l o , h i 0 ) ;
		}
